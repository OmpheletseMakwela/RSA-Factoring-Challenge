#!/usr/bin/python3
import sys

def factorize_number(number):
    """Factorize a number into a product of two smaller numbers"""
    if number % 2 == 0:
        print(f"{number}={number // 2}*2")
        return

    i = 3
    while i <= number // 2:
        if number % i == 0:
            print(f"{number}={number // i}*{i}")
            return
        i += 2

    print(f"{number}={number}*1")

def main():
    if len(sys.argv) != 2:
        print("Usage: python script.py <file>")
        sys.exit(1)

    filename = sys.argv[1]

    try:
        with open(filename) as file:
            for line in file:
                number = int(line.strip())
                factorize_number(number)
    except FileNotFoundError:
        print(f"File '{filename}' not found.")
    except ValueError:
        print("Invalid input in the file.")

if __name__ == "__main__":
    main()
