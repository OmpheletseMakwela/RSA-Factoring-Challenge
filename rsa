#!/usr/bin/python3

import sys

def factorize_numbers(filename):
    """Factorize numbers from a file into a product of two smaller numbers"""
    try:
        with open(filename) as file:
            for line in file:
                number = int(line.strip())
                if number < 2:
                    continue  # Skip numbers less than 2

                if number % 2 == 0:
                    print(f"{number}={number // 2}*2")
                else:
                    divisor = 3
                    while divisor <= number // 2:
                        if number % divisor == 0:
                            print(f"{number}={number // divisor}*{divisor}")
                            break
                        divisor += 2  # Check only odd divisors

                    if divisor > number // 2:
                        print(f"{number}={number}*1")
    except FileNotFoundError:
        print(f"File '{filename}' not found.")
    except ValueError:
        print("Invalid input in the file.")

def main():
    if len(sys.argv) != 2:
        print("Usage: python script.py <file>")
        sys.exit(1)

    filename = sys.argv[1]
    factorize_numbers(filename)

if __name__ == "__main__":
    main()
